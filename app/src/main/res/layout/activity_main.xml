<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnShowToast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        tools:layout_editor_absoluteX="213dp"
        tools:layout_editor_absoluteY="162dp" />

    <Button
        android:id="@+id/btnCheckConnection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="check internet connection" />

    <EditText
        android:id="@+id/tb_Command"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="command here" />

    <EditText
        android:id="@+id/tb_Result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Результат" />

    <EditText
        android:id="@+id/tb_MinLvl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="80" />

    <EditText
        android:id="@+id/tb_MaxLvl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="99" />

    <Button
        android:id="@+id/btn_ChStat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get charging status" />

    <Button
        android:id="@+id/btn_scb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="start control battery" />

    <Button
        android:id="@+id/btn_StopControlling"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Stop controlling" />

    <Button
        android:id="@+id/btn_EnCh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="enable charging" />

    <Button
        android:id="@+id/btn_disCh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="disable charging" />

</LinearLayout>
